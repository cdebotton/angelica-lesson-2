@import 'nib'

clearfix()
  &::after, &::before
    display table
    content ' '
  &::after
    clear both

html,
body
  margin 2.5em

h1, h2, h3, h4, h5, h6
  font-weight 100
  color #111

p, a
  font-size 0.875em
  color #333

a
  text-decoration none
  &.active
    font-weight bold
  &+a
    margin-left 1em

.carousel
  clearfix()
  .items
    clearfix()
    list-style none
    padding 0
    margin 0
    li
      float left
      width 10em
      height 10em
      background-color #000
      color #fff
      text-align center
      &+li
        margin-left 1em
